<%= form_for Entry.new, :as => :entry, :url => { :controller => "entries", :action => "create" }, :html => {:id => "new-entry"} do |f| %>
  <fieldset id="entry">
    <div class="row">
      <div class="span8 columns">
        <div class="clearfix">
          <%= f.text_field :title, :id => "entry-title", :placeholder => "entry title...", :class => "xlarge" %>
        </div>
        <div class="clearfix">
          <%= f.text_area :reflection, :id => "entry-reflection", :size => "57x9", :placeholder => "reflection...", :class => "xlarge default-text" %>
          <span class="help-block">Describe the event, and what it showed about yourself</span>
        </div>
      </div>
      <div class="span8 columns">
        <div id="accordion">
          <h4><a href="#">Select Tags</a></h4>
          <div>
            <ul id="workspace-tag-cloud" style="height:65px"></ul>
            <%= text_field_tag :new_entry_tags, "", :class => "tags-input" %>
          </div>
          <h4><a href="#">Choose Evidence</a></h4>
          <div class="clearfix">
            <div class="input-prepend" style="margin-top:20px;">
              <span class="add-on">http://</span>
              <%= text_field_tag :new_entry_evidence, "", :placeholder => "add link for evidence...", :class => "xlarge" %>
            </div>
            <span class="help-block">e.g. youtube videos, blog posts, public google docs, etc.</span>
          </div>
          <h4><a href="#">Invite Recommendations</a></h4>
          <div>
            <div style="margin-top:10px;">
              <%= text_area_tag :recommendation_message, "", :id => "entry-request-message", :size => "50x2", :class => "span12", :placeholder => "(optional) message to recommenders..." %>
            </div>
            <div style="margin-top:10px;">
              <%= text_field_tag :recommendation_emails, "", :placeholder => "email addresses of recommenders*...", :class => "span12" %>
              <span class="help-block">* comma separated list of email addresses</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= submit_tag "Create", :class => "btn primary" %>
      <a id="cancel-new-entry" href="#" class="btn default">Cancel</a>
    </div>
  </fieldset>
<% end %>
