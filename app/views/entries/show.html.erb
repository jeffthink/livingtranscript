<div id="main" class="span14 offset1">
  <ul class="tabs">
    <li class="active">
      <a href="#entries-tab">Entries</a>
    </li>
    <li>
      <a href="#recommendations-tab">Recommendations</a>
    </li>
    <li>
      <a href="#tags-tab">Tags</a>
    </li>
  </ul>
  <div class="tab-content">
    <div id="entries-tab" class="active">
      <ul class="breadcrumb">
        <li><a href="/">Entries</a> <span class="divider">/</span></li>
        <li class="active"><%= @entry.title %></li>
      </ul>
      <h3><%= @entry.title %></h3>
      <%- if @entry.reflection -%>
        <h6>reflection:</h6>
        <blockquote>
          <%= @entry.reflection %>
        </blockquote>
      <%- end -%>
      <%- if @entry.tags.any? -%>
        <h6>tags</h6>
        <blockquote>
          <%= @entry.tags.collect{|t| t.name.capitalize}.join(" | ") %>
        </blockquote>
      <%- end -%>
      <%- if @entry.evidence.any? -%>
        <h6>evidence</h6>
        <blockquote>
          <%= @entry.tags.collect{|t| t.name.capitalize}.join(" | ") %>
        </blockquote>
      <%- end -%>
    </div>
    <div id="recommendations-tab">
      <%= render :partial => "recommendations/recommendations_tab" %>
    </div>
    <div id="tags-tab">

    </div>
  </div>
</div>